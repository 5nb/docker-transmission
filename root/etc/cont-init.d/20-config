#!/usr/bin/with-contenv bash

# make folders
mkdir -p \
	/downloads /watch

# copy config
[[ ! -f /config/settings.json ]] && cp \
	/defaults/settings.json /config/settings.json

# copy blocklist-update script
[[ ! -f /config/blocklist-update.sh ]] && cp \
	/defaults/blocklist-update.sh /config/blocklist-update.sh

# permissions
chown -R abc:abc \
	/config \
	/downloads \
	/watch

chmod 755 /config/blocklist-update.sh

sed -i -e "s/\"rpc-username\":.*/\"rpc-username\": \"$USER\",/g" /config/settings.json
sed -i -e "s/\"rpc-password\":.*/\"rpc-password\": \"$PASSWD\",/g" /config/settings.json